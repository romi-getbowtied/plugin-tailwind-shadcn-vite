{
	"name": "plugin",
	"version": "1.0.0",
	"scripts": {
		"build": "npm-run-all --sequential build:frontend build:backend",
		"build:frontend": "npm-run-all --sequential build:frontend:js build:frontend:css",
		"build:backend": "npm-run-all --sequential build:backend:js build:backend:css",
		"build:frontend:js": "cross-env BUILD_TARGET=frontend wp-scripts build",
		"build:frontend:css": "npx @tailwindcss/cli -i ui/src/styles/frontend.css -o ui/assets/frontend/styles.css --minify",
		"build:backend:js": "cross-env BUILD_TARGET=backend wp-scripts build",
		"build:backend:css": "npx @tailwindcss/cli -i ui/src/styles/backend.css -o ui/assets/backend/styles.css --minify",
		"start": "npm-run-all --sequential start:js start:css",
		"start:js": "npm-run-all --parallel start:frontend:js start:backend:js",
		"start:frontend:js": "cross-env BUILD_TARGET=frontend wp-scripts start",
		"start:backend:js": "cross-env BUILD_TARGET=backend wp-scripts start",
		"start:css": "npm-run-all --parallel start:frontend:css start:backend:css",
		"start:frontend:css": "npx @tailwindcss/cli -i ui/src/styles/frontend.css -o ui/assets/frontend/styles.css --watch --minify",
		"start:backend:css": "npx @tailwindcss/cli -i ui/src/styles/backend.css -o ui/assets/backend/styles.css --watch --minify",
		"preview": "npm-run-all --parallel sync start",
		"sync": "browser-sync start --config bs-config.js"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.0.6",
		"@types/node": "^24.10.1",
		"@types/react": "18.3.27",
		"@types/react-dom": "18.3.7",
		"@wordpress/scripts": "^30.10.0",
		"browser-sync": "^3.0.3",
		"cross-env": "^7.0.3",
		"npm-run-all": "^4.1.5",
		"shadcn": "^3.5.1",
		"tailwindcss": "^4.0.6",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@base-ui-components/react": "^1.0.0-rc.0",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-navigation-menu": "^1.2.14",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@tabler/icons-react": "^3.35.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.556.0",
		"motion": "^12.23.26",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0"
	}
}
