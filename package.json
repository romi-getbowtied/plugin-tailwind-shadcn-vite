{
  "name": "tailwind-scoped-plugin",
  "version": "1.0.0",
  "description": "WordPress plugin with Tailwind 4 scoped styling",
  "type": "module",
  "scripts": {
    "dev": "npx @tailwindcss/cli -i ./css/tailwind.css -o ./css/style.css --watch",
    "build": "npx @tailwindcss/cli -i ./css/tailwind.css -o ./css/style.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "postcss": "^8.5.6"
  },
  "dependencies": {
    "tailwindcss": "^4.1.14"
  }
}

