{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@repo/*": ["./repo/*"]
		}
	},
	"include": ["src/**/*", "repo/**/*", "vite.config.ts"],
	"exclude": ["node_modules", "assets"]
}
